<!doctype html>
<html lang="en">
 <head>
  <meta name="Author" content="">
  <title>Document</title>
 </head>
 <body>
  <script>
  document.write("<h2>" + "For loop to print 10 numbers"+"</h2>")
  for(var i=1;i<=10;i++){
  document.write(i+"<br>")
  }

  document.write("<h2>" + "while loop to print 10 numbers"+"</h2>")
  var i=1;
  while(i<=10){
  document.write(i+"<br>")
  i++;
  }

  document.write("<h2>" + "breaking for loop if the value is 8  "+"</h2>")
  for(i=1;i<=10;i++){
  if(i==8){
    break;
  }
  document.write(i+"<br>")
  }
  </script>
 </body>
</html>
