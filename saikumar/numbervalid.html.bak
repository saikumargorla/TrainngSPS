  // var num=x.value
   if(x==''){
    document.getElementById("uname").style.borderColor ="red";
   }
   var phno=/^[0-9]+$/;
   if(phno.test(x)==false || x.length>10 || x.length<10){
	   if(phno.test(x)==false){
	   alert("The field should consists only numbers");
	   document.getElementById("uname").value="";
	   document.getElementById("uname").focus();
	   
	   }

	   else if(x.length>10){
		   alert("you have entered"+x.length +" numbers");
      document.getElementById("uname").style.borderColor ="red";
	     document.getElementById("uname").focus();
		
	   }
	   else if(x.length<10){
	      alert("you have entered "+x.length+" digits"+"it should contain 10 digits");
		  document.getElementById("uname").style.borderColor ="red";
          document.getElementById("uname").focus();
	   }
   }
   
   }
  </script>
